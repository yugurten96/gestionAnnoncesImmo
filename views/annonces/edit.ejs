<% include ../partials/header %>

<div class="row">
    <h1 style="text-align:center;">Edition de l'annonce: <%annonce.name%></h1>
    <div style="width: 30%; margin: 20px auto;">
        <form action="/annonces/<%=annonce._id%>/?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Nom</label>
                <input class="form-control" type="text"  name="name" value="<%=annonce.name%>" required>
            </div>
            <div class="form-group">
                <label for="price">Prix</label>
                <input class="form-control" type="number" name="price" value="<%=annonce.price%>" required>
            </div>
            <div class="form-group">
                <label for="type">Type de bien</label>
                <div class="form-check-inline">
                    <label for="type">Vente</label>
                    <input class="form-check-input" type="radio" name="type" checked="" value="Vente">
                    <label for="type">Location</label>
                    <input class="form-check-input" type="radio" name="type" value="Location">
                </div>

            </div>
            <div class="form-group">
                <label for="status">Statut de bien</label>
                <div class="form-check-inline">
                    <label for="status">Disponible</label>
                    <input class="form-check-input" type="radio" name="status"  checked="" value="Disponible">
                    <label for="status">Loué</label>
                    <input class="form-check-input" type="radio" name="status" value="Loué">
                    <label for="status">Vendu</label>
                    <input class="form-check-input" type="radio" name="status" value="Vendu">

                </div>
            </div>
            <div class="form-group">
                <label for="publication">Statut de publication</label>
                <div class="form-check-inline">
                    <label for="publication">  Publiée </label>
                    <input class="form-check-input" type="radio" name="publication" checked="" value="Publiée">
                    <label for="publication">  Non Publiée  </label>
                    <input class="form-check-input" type="radio" name="publication" value="Non Publiée">
                </div>
            </div>

            <div class="form-group">
                <label for="location">Adresse</label>
                <input class="form-control" type="text" id="location" name="location" value="<%=annonce.location%>" required>
            </div>
            <div class="form-group">
                <label for="location">Date de disponibilité</label>
                <input class="form-control" type="text" id="availablity" name="availablity" value="<%=annonce.availablity.toISOString().substr(0, 10)%>" required>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control" type="text" name="description" value="<%=annonce.description%>"></textarea>
            </div>
            <div class="form-group">
                <label for="image">Images</label>
                <input class="form-control" type="file" draggable="true" id="image" name="image" accept="image/*" value="<%=annonce.image%>" multiple required>
            </div>
            <div class="form-group">
                <button class="btn-lg btn-primary btn-block">Valider</button>
            </div>
        </form>
        <a href="/annonces">Retour aux annonces</a>
    </div>
</div>

<% include ../partials/footer %>
