<% include ../partials/header %>

<div class="row">
    <h1 style="text-align:center;">Créer une nouvelle annonce</h1>
    <div style="width: 30%; margin: 20px auto;">
        <form action="/annonces" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Nom</label>
                <input class="form-control" type="text" name="annonce[name]" placeholder="Nom" required>
            </div>
            <div class="form-group">
                <label for="price">Prix</label>
                <input class="form-control" type="number" name="annonce[price]" placeholder="Prix" required>
            </div>
            <div class="form-group">
                <label for="type">Type de bien</label>
                <div class="form-check-inline">
                    <label for="type">Vente</label>
                    <input class="form-check-input" type="radio" name="annonce[type]" checked="" value="Vente">
                    <label for="type">Location</label>
                    <input class="form-check-input" type="radio" name="annonce[type]" value="Location">
                </div>

            </div>
            <div class="form-group">
                <label for="status">Statut de bien</label>
                <div class="form-check-inline">
                    <label for="status">Disponible</label>
                    <input class="form-check-input" type="radio" name="annonce[status]" value="Disponible" checked="">
                    <label for="status">Loué</label>
                    <input class="form-check-input" type="radio" name="annonce[status]" value="Loué">
                    <label for="status">Vendu</label>
                    <input class="form-check-input" type="radio" name="annonce[status]" value="Vendu">

                </div>
            </div>
            <div class="form-group">
                <label for="publication">Statut de publication</label>
                <div class="form-check-inline">
                    <label for="publication">  Publiée </label>
                    <input class="form-check-input" type="radio" name="annonce[publication]" checked="" value="Publiée">
                    <label for="publication">  Non Publiée  </label>
                    <input class="form-check-input" type="radio" name="annonce[publication]" value="Non Publiée">
                </div>
            </div>


            <div class="form-group">
                <label for="location">Adresse</label>
                <input class="form-control" type="text" id="location" name="annonce[location]"
                    placeholder="64 Rue de Rivoli, 76600 Le Havre" required>
            </div>
            <div class="form-group">
                <label for="location">Date de disponibilité</label>
                <input class="form-control" type="date" id="location" name="annonce[availablity]" required>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control" type="text" name="annonce[description]"
                    placeholder="Description"></textarea>
            </div>
            <div class="form-group">
                <label for="image">Images</label>
                <input class="form-control" draggable="true" type="file" id="image" name="image" multiple accept="image/*" required>
            </div>
            <div class="form-group">
                <button class="btn-lg btn-primary btn-block">Valider</button>
            </div>
        </form>
        <a href="/annonces">Retour aux annonces</a>
    </div>
</div>

<% include ../partials/footer %>
