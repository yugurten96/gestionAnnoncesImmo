<% include ../partials/header %>

<div class="row">
    <h1 style="text-align:center;">Edition du commentaire</h1>
    <div style="width: 30%; margin: 20px auto;">
        <form action="/annonces/<%= campground_id %>/comments/<%= comment._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <textarea class="form-control" type="text" name="comment[text]" value="<%=comment.text%>"></textarea>
            </div>
            <div class="form-group">
                <button class="btn-lg btn-primary btn-block">Valider</button>
            </div>
        </form>
        <a href="/annonces">Retour aux annonces</a>
    </div>
</div>



