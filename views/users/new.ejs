<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center">Créer un nouveau utilisateur</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/users" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <input class="form-control" type="text" name="user[username]" placeholder="Nom d'utilisateur" required>
            </div>
            <div class="form-group">
                <label for="publication">Rôle</label>
                <div class="form-check-inline">
                    <label for="publication">Utilisateur</label>
                    <input class="form-check-input" type="radio" name="user[role]" checked="" value="utilisateur">
                    <label for="publication">Agent</label>
                    <input class="form-check-input" type="radio" name="user[role]" value="agent">
                    <label for="publication">Admin</label>
                    <input class="form-check-input" type="radio" name="user[role]" value="admin">
                </div>
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="user[password]" placeholder="Mot de passe" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="user[firstname]" placeholder="Prénom" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="user[lastname]" placeholder="Nom" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="email" name="user[email]" placeholder="E-mail" required>
            </div>
            <div class="form-group">
                <label for="avatar">Avatar</label>
                <input class="form-control" type="file" id="avatar" name="avatar" accept="avatar/*">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Créer</button>
            </div>
        </form>
        <a href="/users">Retour</a>
    </div>
</div>

<% include ../partials/footer %>
